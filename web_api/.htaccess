# .htaccess - Security and routing rules
Options -Indexes
# Protect config.php from direct access
<Files "config.php">
    Order allow,deny
    Deny from all
</Files>

# Enable rewrite engine for clean URLs
RewriteEngine On

# Redirect to HTTPS if not already
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# API routing - You can use this if you want cleaner URLs
# RewriteRule ^api/knowledge/([a-zA-Z0-9\-\_]+)/?$ api.php?category=$1 [NC,L,QSA]

# Security headers
Header always set X-Content-Type-Options nosniff
Header always set X-Frame-Options DENY
Header always set X-XSS-Protection "1; mode=block"

# Disable server signature
ServerSignature Off